##  Zsh general config ##

# Include specialized configs

source ${HOME}/.zsh/environment.zsh		# Settings for environment
source ${HOME}/.zsh/history.zsh			# Settings for keeping a history
source ${HOME}/.zsh/setopts.zsh			# Settings for zsh behaviour
source ${HOME}/.zsh/zplug.zsh			# Load and init plugins
source ${HOME}/.zsh/colors.zsh
source ${HOME}/.zsh/completion.zsh
source ${HOME}/.zsh/aliases.zsh

# Make sure all homebrew executables can be run
if [[ -f "/opt/homebrew/bin/brew" ]]; then
	eval "$(/opt/homebrew/bin/brew shellenv)"
fi
